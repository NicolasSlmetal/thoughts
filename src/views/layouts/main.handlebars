<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Thoughts</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <nav id="navbar">
        <a href="/" id="logo">
            <img src="/img/toughts_logo.png" >
        </a>
        <ul class="options">
            <li class="option__link">
                <a href="/">Pensamentos</a>
            </li>
            {{#if session}}
                <li class="option__link">
                    <a href="/thoughts/dashboard">Dashboard</a>
                </li>
                <li class="option__link">
                    <a href="/auth/logout">Logout</a>
                </li>
            {{else}}
                <li class="option__link">
                    <a href="/auth/login">Entrar</a>
                </li>
                <li class="option__link">
                    <a href="/auth/register">Registrar</a>
                </li>
            {{/if}}
        </ul>
    </nav>
    <div class="container">
        {{#if messages.message}}
            <div class="message__container">
                <p class="message__text">{{messages.message}}</p>
            </div>
        {{/if}}
        {{{body}}}
    </div>
    <footer>
        <p><span>Thoughts</span> &copy; 2024</p>
    </footer>
</body>
</html>