<div class="home-header">
    {{#if search}}
        <h1>Trazendo todos os resultados para <span>{{search}}</span></h1>
    {{#if thoughtsSize}}
        <p>Resultados: <span>{{thoughtsSize}} pensamento(s)</span></p>
    {{else}}
        <p>Sem resultados</p>
    {{/if}}

    {{else}}
        <h1>Conheça alguns pensamentos da comunidade!</h1>
    {{/if}}
    <form action="">
        <input type="text" name="search" placeholder="Está buscando por algo?">
        <input type="submit" value="Pesquisar">
    </form>
    <div class="order-container">
        <span>Ordernar por:</span>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>

</div>
<div class="thoughts-container">
    {{#each thoughts}}
        {{#with this}}
            <figure>
                <blockquote>
                    "{{title}}"
                </blockquote>
                <figcaption>Por <span>{{User.name}}</span></figcaption>
            </figure>
        {{/with}}
    {{/each}}
</div>