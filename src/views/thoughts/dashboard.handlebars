<div class="dashboard">
    <div class="title__container">
        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Criar pensamento</a>
    </div>
    <h3>Seus pensamentos</h3>
    <ul>
        {{#each thoughts}}
            <li>
                <span class="label"> {{this.title}}</span>
                <span class="actions">
                    <a href="/thoughts/edit/{{this.id}}" class="btn">Editar</a>
                    <form action="/thoughts/delete" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn"
                               onclick="return confirm('Deseja excluir o pensamento \'{{this.title}}\'?')">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
    {{#if emptyThoughts}}
        <p>Ainda não há nenhum pensamento, comece a criar <a href="/thoughts/add">Pensamentos!</a></p>
    {{/if}}
</div>